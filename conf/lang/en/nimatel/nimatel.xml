<include>
  <macro name="welcome_enter_pin_cc">
    <input pattern="(.*)">
      <match>
        <action function="execute" data="sleep(400)"/>
        <action function="play-file" data="nimatel/welcome.wav"/>
        <action function="execute" data="sleep(400)"/>
        <action function="play-file" data="nimatel/enter_pin_cc.wav"/>
      </match>
    </input>
  </macro>
  <macro name="invalid_pin_try_again">
    <input pattern="(.*)">
      <match>
        <action function="execute" data="sleep(400)"/>
        <action function="play-file" data="nimatel/invalid_pin.wav"/>
        <action function="execute" data="sleep(400)"/>
        <action function="play-file" data="nimatel/try_again.wav"/>
      </match>
    </input>
  </macro>
  <macro name="invalid_entry_try_again">
    <input pattern="(.*)">
      <match>
        <action function="execute" data="sleep(400)"/>
        <action function="play-file" data="nimatel/invalid_entry.wav"/>
        <action function="execute" data="sleep(400)"/>
        <action function="play-file" data="nimatel/try_again.wav"/>
      </match>
    </input>
  </macro>
  <macro name="nimatel_down_call_back_later">
    <input pattern="(.*)">
      <match>
        <action function="execute" data="sleep(400)"/>
        <action function="play-file" data="nimatel/nimatel_down.wav"/>
        <action function="execute" data="sleep(400)"/>
        <action function="play-file" data="nimatel/call_back_later.wav"/>
      </match>
    </input>
  </macro>
  <macro name="read_balance_enter_destination">
    <input pattern="(.*)">
      <match>
        <action function="execute" data="sleep(400)"/>
        <action function="play-file" data="nimatel/thank_you.wav"/>
        <action function="execute" data="sleep(400)"/>
        <action function="play-file" data="nimatel/balance_is.wav"/>
        <action function="say" data="$1" method="pronounced" type="currency"/>
        <action function="play-file" data="nimatel/enter_destination.wav"/>
      </match>
    </input>
  </macro>
</include>

